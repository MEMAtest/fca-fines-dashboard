{
  "name": "fca-fines-dashboard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "node --loader ts-node/esm --experimental-specifier-resolution=node server.ts",
    "start": "node --loader ts-node/esm --experimental-specifier-resolution=node server.ts",
    "build": "vite build && npx tsx scripts/prerender-seo.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "scrape:fines": "node --loader ts-node/esm scripts/scraper/scrapeFcaFines.ts",
    "scrape:fines:dry": "node --loader ts-node/esm scripts/scraper/scrapeFcaFines.ts --dry-run",
    "verify:setup": "bash scripts/verify-setup.sh",
    "blog:monthly": "npx tsx scripts/generate-blog.ts monthly",
    "blog:topical": "npx tsx scripts/generate-blog.ts topical",
    "blog:help": "npx tsx scripts/generate-blog.ts --help"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.969.0",
    "@neondatabase/serverless": "^0.9.5",
    "@vercel/analytics": "^1.6.1",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "classnames": "^2.5.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dom-to-image": "^2.6.0",
    "dotenv": "^16.4.7",
    "express": "^5.2.1",
    "framer-motion": "^12.23.25",
    "fuse.js": "^7.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.555.0",
    "papaparse": "^5.4.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router-dom": "^7.10.1",
    "react-use": "^17.5.0",
    "recharts": "^3.5.1",
    "resend": "^6.6.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vercel/node": "^5.5.14",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.3.0",
    "puppeteer": "^24.35.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.16"
  }
}
